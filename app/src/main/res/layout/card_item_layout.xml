<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <androidx.cardview.widget.CardView
        android:id="@+id/long_card_view_item"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginStart="5dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#9F897D"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/lcard_title"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="The Title"
                    android:textColor="#FFFFFF"
                    android:paddingStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/lcard_second_title"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="The Title"
                    android:paddingStart="10dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="italic" />
                <TextView
                    android:id="@+id/lcard_description"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="The Title"
                    android:paddingStart="10dp"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lcard_image"
                android:layout_width="176dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:background="@drawable/image_3"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/black_shader">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bookmark_icon"
                        android:background="@android:color/transparent"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="120dp"
                        android:id="@+id/fvrt_f2_item"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>